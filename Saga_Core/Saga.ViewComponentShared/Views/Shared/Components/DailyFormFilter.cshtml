@using Saga.DomainShared.Constants
@model Saga.ViewComponentShared.ViewModels.DailyFormFilterViewModel

@(await Component.InvokeAsync(AppPart.BasicFormFilter, Model.ConvertToBasicDefault()))

<div class="row">
    <div class="col-md-4">
        <div class="form-group" style="margin-bottom: 5px;">
            <label for="StartDate" class="col-sm-4 control-label" style="text-align: left;">Start Date</label>
            <div class="col-sm-8">
                <div class="input-group date">
                    <input type="text" class="form-control input-sm pull-right" id="txtStartDate" value="@string.Format("{0:yyyy-MM-dd}", Model.StartDate)">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>